%h1 マイページ
.alert.alert-dismissible.fade.in{role: 'alert', class: @v[:current_profit] > 0 ? 'alert-success' : 'alert-danger'}
  %button.close{type: 'button', 'data-dismiss' => 'alert', 'aria-label' => 'Close'}
    %span{'aria-hidden' => 'true'} &times;
  %h4.alert-heading 統計
  %dl.row.m-b-0
    %dt.col-sm-3 年間投資額:
    %dd.col-sm-9= number_to_currency @v[:year_deposit]
    %dt.col-sm-3 累計投資額:
    %dd.col-sm-9= number_to_currency @v[:total_paid]
    %dt.col-sm-3 現在価額:
    %dd.col-sm-9= number_to_currency @v[:current_price]
    %dt.col-sm-3 損益合計:
    %dd.col-sm-9
      = number_to_currency @v[:current_profit]
      (
      ="%0.1f" % (@v[:current_profit_rate] * 100)
      \%)
.clearfix
  %h2.float-xs-left ETF
  =link_to "詳細を見る", user_issues_path, class: %w(btn btn-link float-xs-right)
%table.table
  %thead
    %tr
      %th
      %th 名前
      %th 最終購入日
      %th 平均購入価格
      %th 購入口数
      %th 購入総額
      %th 現在価格
      %th 評価損益
  %tbody
    - @user_issues.each do |code, ui|
      %tr
        -# %td
        -#   %button.btn.btn-secondary.btn-sm{type: :button, data: {toggle: :collapse, target: "#col_#{code}"}, 'aria-expanded' => false, 'aria-controls' => "col_#{code}"} +
        %td= link_to ui[:name], issue_path(code)
        %td= ui[:last_bought_day]
        %td= number_to_currency ui[:average_price]
        %td= ui[:num]
        %td= number_to_currency ui[:total_paid]
        %td= number_to_currency ui[:current_price]
        %td= number_to_currency ui[:current_profit]
      -# %tr
      -#   %td{colspan: 8}
      -#     .collapse{id: "col_#{code}"}
      -#       = render partial: "user_issues/index", locals: {issues: @my_issues.where(issue_code: code)}
.clearfix
  %h2.float-xs-left 投資信託
  =link_to "詳細を見る", user_investments_path, class: %w(btn btn-link float-xs-right)
%table.table
  %thead
    %tr
      %th 名前
      %th 最終購入日
      %th 平均購入価格
      %th 購入口数
      %th 購入総額
      %th 現在価格
      %th 評価損益
  %tbody
    - @user_investments.each do |code, ui|
      %tr
        %td= ui[:name]
        %td= ui[:last_bought_day]
        %td= number_to_currency ui[:average_price]
        %td= ui[:num]
        %td= number_to_currency ui[:total_paid]
        %td= number_to_currency ui[:current_price]
        %td= number_to_currency ui[:current_profit]
