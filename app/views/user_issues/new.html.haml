%h1 新規登録

= form_for @user_issue do |f|
  .form-group.row
    = f.label :issue_code, 'コード', class: 'col-xs-2', for: 'user_issue_issue_code'
    .col-xs-10
      = f.text_field :issue_code, class: 'form-control'

  .form-group.row
    = f.label :price, '取引価格', class: 'col-xs-2', for: 'user_issue_price'
    .col-xs-10.input-group
      .input-group-addon ￥
      = f.number_field :price, class: 'form-control'

  .form-group.row
    = f.label :price, '口数', class: 'col-xs-2', for: 'user_issue_num'
    .col-xs-10
      = f.number_field :num, class: 'form-control'

  .form-group
    = f.submit '決定', class: 'btn btn-primary btn-lg'
